%% ========= DOMÆNE-ENTITETER =========
class Bus {
    +BusId: string
    +Model: BusModel
    +Rute: RuteNavn
    +BatteriKapacitetKWh: double
    +BatteriNiveauProcent: double
    +ForbrugKWhPrKm: double
    +Status: BusStatus
    +BeregnResterendeDriftTid(gennemsnitsHastighedKmh: double): TimeSpan
}

class RuteNavn {
    <<enumeration>>
    R1A
    R10
    R11
    R13
    R132
    R133
    R137
    R139
}

class BusModel {
    <<enumeration>>
    MBeCitaro
    YutongE12
    BYDK9
    Volvo7900E
}

class BusStatus {
    <<enumeration>>
    PåRute        %% Inroute
    Afløser       %% Intercept
    Returnerer
    Oplader
    Garage
}

