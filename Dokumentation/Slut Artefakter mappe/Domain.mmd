%% ========== DOMÆNE-ENTITETER ==========
class Bus {
    +string BusId
    +BusModel Model
    +RuteNavn Rute
    +double BatteriKapacitet
    +double BatteriNiveau
    +BusStatus Status
    +DateTime SidstOpdateret
    +DateTime StatusÆndretTid
}

class BatteriInfo {
    +double KapacitetKWh
    +double NiveauProcent
    +double ForbrugKWhPrKm
}

class Rute {
    +RuteNavn Navn
    +double DistanceKm
}

class Vejr {
    +Måned Måned
    +double TemperaturC
    +double SneDybdeCm
    +double NedbørMm
}

%% ========== ENUMERATIONER ==========
class BusStatus {
    <<enumeration>>
    PåRute
    Afløser
    Returnerer
    Oplader
}

class BusModel {
    <<enumeration>>
    MBeCitaro
    YutongE12
    BYDK9
    Volvo7900E
}

class RuteNavn {
    <<enumeration>>
    R1A
    R10
    R11
    R13
    R132
    R133
    R137
    R139
