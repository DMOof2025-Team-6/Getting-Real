<Window x:Class="UMOVEWPF.AddEditBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bus Data" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Bus ID:"/>
        <TextBox x:Name="BusIdTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Model:"/>
        <TextBox x:Name="ModelTextBox" Margin="0,0,0,10"/>
        <TextBlock Text="Year:"/>
        <TextBox x:Name="YearTextBox" Margin="0,0,0,10"/>
        <Button Content="Gem" Width="80" HorizontalAlignment="Right" Click="Save_Click"/>
    </StackPanel>
</Window> 