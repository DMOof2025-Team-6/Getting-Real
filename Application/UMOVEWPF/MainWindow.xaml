<Window x:Class="UMOVEWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMOVEWPF"
        mc:Ignorable="d"
        Title="Umove AS" Height="700" Width="1400" Background="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:EnumToListConverter x:Key="EnumToListConverter"/>
        <local:ProgressBarColorConverter x:Key="ProgressBarColorConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/> 
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Venstre panel -->
        <StackPanel Grid.Column="0" Grid.RowSpan="2" Background="#F7F7F7">
            <Image Source="/UMOVEWPF;component/Images/UmoveBillede.png" Height="60" Margin="10"/>
            <Button Content="Bus Administration" Margin="10,20,10,0" Height="35" Command="{Binding ShowBusAdminCommand}"/>
            <Button Content="Batteri Status" Margin="10,10,10,0" Height="35" Command="{Binding ShowBatteryStatusCommand}"/>
            <Button Content="Kritiske Busser" Margin="10,10,10,0" Height="35" Command="{Binding ShowCriticalBusesCommand}"/>
            <Button Content="Opladningsplan" Margin="10,10,10,0" Height="35" Command="{Binding ShowChargingPlanCommand}"/>
        </StackPanel>

        <!-- Topbar -->
        <Border Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Background="White" Height="80">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <TextBlock Text="{Binding CurrentView}" FontSize="22" Foreground="#FF9900" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>

        <!-- Midte: Add Bus og Update Status -->
        <StackPanel Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" Margin="0,30,0,0">
            <Button Content="Add Bus" Width="90" Height="30" Background="#FF9900" Foreground="White" FontWeight="Bold" Command="{Binding AddBusCommand}"/>
            <Button Content="Simulata" Width="90" Height="30" Background="#FF9900" Foreground="White" FontWeight="Bold" Command="{Binding UpdateBatteryStatusCommand}" Margin="0,10,0,0"/>
            
            <!-- Detaljeret Batteristatus -->
            <Border Margin="0,30,0,0" Padding="20" Background="#F7F7F7" CornerRadius="10" Visibility="{Binding SelectedBus, Converter={StaticResource NullToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="Detaljeret Batteristatus" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedBus.BusId, StringFormat=Bus ID: {0}}" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.BatteryCapacity, StringFormat=Batteri Kapacitet: {0} kWh}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.Year, StringFormat=År: {0}}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.Route, StringFormat=Busrute: {0}}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.Consumption, StringFormat=Forbrug: {0} kWh/km}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.BatteryLevel, StringFormat=Nuværende Niveau: {0:F1}%}" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SelectedBus.LastUpdate, StringFormat=Sidste Opdatering: {0:dd/MM/yyyy HH:mm}}" Margin="0,0,0,5"/>
                    </StackPanel>
                    <!-- Batteri opdatering -->
                    <StackPanel Margin="0,20,0,0">
                        <TextBlock Text="Opdater Batteri:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox Width="60" Text="{Binding BatteryLevelInput, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,8"/>
                        <Button Content="Opdater" Width="70" Command="{Binding UpdateBatteryLevelCommand}"/>
                    </StackPanel>
                    <!-- Batteri Status Indikator -->
                    <Border Margin="0,20,0,0" Padding="15" Background="White" CornerRadius="5">
                        <StackPanel>
                            <TextBlock Text="Batteri status" FontWeight="SemiBold" Margin="0,0,0,10"/>
                            <ProgressBar Height="20" Value="{Binding SelectedBus.BatteryLevel}" Maximum="100" Margin="0,0,0,5" Foreground="{Binding SelectedBus.BatteryLevel, Converter={StaticResource ProgressBarColorConverter}}">
                                <ProgressBar.Style>
                                    <Style TargetType="ProgressBar">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedBus.IsCritical}" Value="True">
                                                <Setter Property="Background" Value="#FFE0E0"/>
                                                <Setter Property="Foreground" Value="#FF0000"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SelectedBus.BatteryLevel}" Value="20">
                                                <Setter Property="Background" Value="#FFF0E0"/>
                                                <Setter Property="Foreground" Value="#FF9900"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ProgressBar.Style>
                            </ProgressBar>
                            <TextBlock Text="{Binding SelectedBus.Status}" 
                                     Foreground="{Binding SelectedBus.IsCritical, Converter={StaticResource BoolToColorConverter}}"
                                     FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Højre: Liste over busser -->
        <StackPanel Grid.Column="2" Grid.Row="1" Margin="20,30,20,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnSortId" Grid.Column="0" Content="ID" FontWeight="Bold" Margin="5" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="SortByBusId_Click"/>
                <Button x:Name="BtnSortRoute" Grid.Column="1" Content="Rute" FontWeight="Bold" Margin="5" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="SortByRoute_Click"/>
                <Button x:Name="BtnSortBattery" Grid.Column="2" Content="Batteri" FontWeight="Bold" Margin="5" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="SortByBattery_Click"/>
                <Button x:Name="BtnSortStatus" Grid.Column="3" Content="Status" FontWeight="Bold" Margin="5" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="SortByStatus_Click"/>
                <Button x:Name="BtnSortInService" Grid.Column="4" Content="I drift" FontWeight="Bold" Margin="5" Background="Transparent" BorderBrush="Transparent" Cursor="Hand" Click="SortByInService_Click"/>
            </Grid>
            <ListBox ItemsSource="{Binding Buses}" SelectedItem="{Binding SelectedBus, Mode=TwoWay}" Height="350">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="100"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding BusId}" Margin="5" TextAlignment="Center" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Type local:RouteName}}"
                                      SelectedItem="{Binding Route, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="90" Height="22" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="{Binding BatteryLevel, StringFormat={}{0:F1}%}" Margin="5" TextAlignment="Center" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="3" Height="18" Value="{Binding BatteryLevel}" Maximum="100" Margin="5,0" Foreground="{Binding BatteryLevel, Converter={StaticResource ProgressBarColorConverter}}" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="4"
                                      ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Type local:BusStatus}}"
                                      SelectedItem="{Binding Status, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Width="90" Height="22" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                <Button Content="Edit Bus" Width="100" Margin="0,0,10,0" Command="{Binding EditBusCommand}"/>
                <Button Content="Remove Bus" Width="100" Command="{Binding RemoveBusCommand}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
