<!-- Vindue til at tilføje eller redigere en bus. Indeholder felter for alle relevante busdata. -->
<Window x:Class="UMOVEWPF.Views.AddEditBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UMOVEWPF.Views"
        xmlns:models="clr-namespace:UMOVEWPF.Models"
        xmlns:conv="clr-namespace:UMOVEWPF.Converters"
        Title="Bus Data" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    
    <!-- Converter til at vise enum-værdier i ComboBox -->
    <Window.Resources>
        <conv:EnumToListConverter x:Key="EnumToListConverter"/>
    </Window.Resources>
    
    <StackPanel Margin="20">
        <!-- Bus ID -->
        <TextBlock Text="Bus ID:"/>
        <TextBox Text="{Binding BusId, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <!-- Busrute (enum) -->
        <TextBlock Text="Busrute:"/>
        <ComboBox ItemsSource="{Binding Converter={StaticResource EnumToListConverter}, ConverterParameter={x:Type models:RouteName}}"
                  SelectedItem="{Binding Route, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="0,0,0,10"/>
        
        <!-- Produktionsår -->
        <TextBlock Text="År:"/>
        <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <!-- Batterikapacitet -->
        <TextBlock Text="Batteri Kapacitet:"/>
        <TextBox Text="{Binding BatteryCapacity, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <!-- Forbrug -->
        <TextBlock Text="Forbrug (kWh/km):"/>
        <TextBox Text="{Binding Consumption, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,10"/>
        
        <!-- Knapper til at gemme eller annullere -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Gem" Width="80" Margin="0,0,10,0" IsDefault="True" Click="OnSave"/>
            <Button Content="Annuller" Width="80" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window> 