<!-- Simpelt vindue til bekræftelse af sletning af bus. Viser tekst og to knapper. -->
<Window x:Class="UMOVEWPF.Views.RemoveBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bekræft sletning" Height="150" Width="300" WindowStartupLocation="CenterOwner">
    
    <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <!-- Bekræftelsestekst -->
        <TextBlock Text="Er du sikker på at du vil slette denne bus?" TextWrapping="Wrap" Margin="0,0,0,20"/>
        
        <!-- Knapper til valg -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Ja" Width="60" Margin="0,0,10,0" Click="Yes_Click"/>
            <Button Content="Nej" Width="60" Click="No_Click"/>
        </StackPanel>
    </StackPanel>
</Window> 