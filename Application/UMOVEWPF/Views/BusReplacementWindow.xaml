<Window x:Class="UMOVEWPF.Views.BusReplacementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMOVEWPF.Views"
        xmlns:models="clr-namespace:UMOVEWPF.Models"
        xmlns:conv="clr-namespace:UMOVEWPF.Converters"
        mc:Ignorable="d"
        Title="Bus Udskiftning" Height="450" Width="600"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <conv:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Message -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Margin="0,0,0,20">
            <Run Text="Advarsel: "/>
            <Run Text="{Binding LowBatteryBus.BusId}" FontWeight="Bold"/>
            <Run Text=" har lavt batteriniveau ("/>
            <Run Text="{Binding LowBatteryBus.BatteryLevel, StringFormat={}{0:F1}%}" FontWeight="Bold"/>
            <Run Text="). Vælg en bus fra garagen til udskiftning eller udskyd handlingen."/>
        </TextBlock>

        <!-- Available Buses List -->
        <ListView Grid.Row="1" ItemsSource="{Binding AvailableBuses}" SelectedItem="{Binding SelectedReplacementBus}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Bus ID" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BusId}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Batteri" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding BatteryLevel, StringFormat={}{0:F1}%}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Model" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Model}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Udskyd 30 min" Width="120" Height="30" Margin="0,0,10,0" 
                    Command="{Binding PostponeCommand}" 
                    IsEnabled="{Binding CanPostpone}"/>
            <Button Content="Vælg Bus" Width="120" Height="30" Margin="0,0,10,0" 
                    Command="{Binding SelectBusCommand}"
                    IsEnabled="{Binding SelectedReplacementBus, Converter={StaticResource NullToVisibilityConverter}}"/>
            <Button Content="Annuller" Width="120" Height="30" 
                    Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window> 