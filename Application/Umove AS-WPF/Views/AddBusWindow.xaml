<Window x:Class="Umove_AS_WPF.Views.AddBusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Umove_AS_WPF.Views"
        mc:Ignorable="d"
        Title="Add/Edit Bus" Height="450" Width="400"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="HeaderText"
                   Text="Add New Bus"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Form -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Bus Name:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" 
                     Padding="5"
                     Margin="0,0,0,10"/>

            <TextBlock Text="Status:" Margin="0,0,0,5"/>
            <ComboBox x:Name="StatusComboBox"
                      Padding="5"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Battery Level:" Margin="0,0,0,5"/>
            <Slider x:Name="BatterySlider"
                    Minimum="0"
                    Maximum="100"
                    Value="100"
                    Margin="0,0,0,5"/>
            <TextBlock x:Name="BatteryLevelText"
                       Text="100%"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="Location:" Margin="0,0,0,5"/>
            <TextBox x:Name="LocationTextBox"
                     Padding="5"
                     Margin="0,0,0,10"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="SaveButton"
                    Content="Save"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="SaveButton_Click"/>
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Padding="15,5"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window> 